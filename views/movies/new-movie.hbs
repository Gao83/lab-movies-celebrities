<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Create a New Movie</h2>

            <hr>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Create a new title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" placeholder="Create a new genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" placeholder="Create a new catch phrase"
                        name="plot">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple>
                        {{#each NewArrActors}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>

                </div>



                <button type="submit" class="btn btn-outline-success">Create New Movie</button>
                <a href="/movies" class="btn btn-outline-danger">Movies list</a>

                <a href="/" class="btn btn-outline-info">Volver al inicio</a>
            </form>


            <hr>


        </div>
    </div>
