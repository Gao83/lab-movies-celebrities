<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">



            <h2>Edit Movie</h2>

            <hr>

            <form action="/movies/{{movie.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple>
                        {{#each actors}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                        {{#each movie.cast}}
                        <option value="{{id}}" selected>{{name}}</option>
                        {{/each}}
                    </select>

                </div>



                <button type="submit" class="btn btn-outline-success">Update Changes</button>
                <a href="/" class="btn btn-outline-info">Volver al inicio</a>
            </form>
        </div>
    </div>


</div>
