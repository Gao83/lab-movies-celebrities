<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Create a New Celebrity</h2>

            <hr>

            <form action="/celebrities/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Create a new name" name="name">
                </div>
                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" placeholder="Create a new occupation"name="occupation">
                </div>
                <div class="mb-3">
                    <label for="catchPhrase" class="form-label">Catch Phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" placeholder="Create a new catch phrase"name="catchPhrase">
                </div>


                <button type="submit" class="btn btn-outline-success">Create New Celebrity</button>
                <a href="/" class="btn btn-outline-info">Volver al inicio</a>
            </form>


            <hr>


        </div>
    </div>


</div>
